<h2>All Heroines</h2>

<b>Search By Superpower:</b>
<%= form_tag(heroines_path, method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag "Search" %>
<% end %>

<%= button_to "Refresh", {:action => "index"}, :method => :get %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>

<%= button_to "Create New Heroine", {:action => "new"}, :method => :get %>
