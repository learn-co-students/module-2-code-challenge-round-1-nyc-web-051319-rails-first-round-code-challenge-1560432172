<h1>Create New Heroine</h1>

  <% if flash[:message] %>
    <h2><%= flash[:message] %></h2>
  <% end %>

  <%= form_for @heroine do |f| %>
  <%= f.label "Name :"%>
  <%= f.text_field :name%>
  <%= f.label "Super Name :"%>
  <%= f.text_field :super_name %>
  <%= f.label "Power :" %>
  <%= f.collection_select(:power_id, Power.all, :id, :name, prompt: true) %>
  <%= f.submit %>
  <% end  %>


  <h4><%= link_to "Back To Heroines Home Page", heroines_path  %></h4>
