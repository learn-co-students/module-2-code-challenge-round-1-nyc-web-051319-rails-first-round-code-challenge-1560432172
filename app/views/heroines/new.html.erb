<h1>Creating SuperHero</h1>


<%if flash[:messages]%>
<h2> <%= flash[:messages]%> </h2>
<%end%>

<%=form_for @heroine do |f|%>
<%=f.label "name"%>
<%=f.text_field "name"%>
<%=f.label "super_name"%>
<%=f.text_field "super_name"%>
<%=f.collection_select(:power_id, @powers, :id, :name, {:prompt => true})%>
<%=f.submit%>
<%end%>