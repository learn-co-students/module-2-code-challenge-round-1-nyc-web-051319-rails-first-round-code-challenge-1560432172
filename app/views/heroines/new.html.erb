<h3>New Heroine Form:</h3>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= "#{error}!" %>
  <%end%>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label "Name: "%>
  <%= f.text_field :name %><br><br>
  <%= f.label "Super Name: " %>
  <%= f.text_field :super_name %><br><br>
  <%= f.label "Power: "%>
  <%= f.collection_select :power_id, @powers, :id, :name %><br><br>
  <%= f.submit %>
<% end %>
