<h2>All Superpowers</h2>

<ul>
  <% @powers.each do |power| %>
    <li>
      <%= link_to power.name, power_path(power) %>
      <br>
      Description: <%= power.description %>
    </li>
    <br>
  <% end %>
</ul>

<%= button_to "Return to Heroines", heroines_path, method: "get" %><br>
<%= button_to "Return to Powers", powers_path, method: "get" %>
